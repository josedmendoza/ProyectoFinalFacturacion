DROP TABLE CLIENTE IF EXISTS;
CREATE TABLE CLIENTE (
ID_CLIENTE LONG AUTO_INCREMENT PRIMARY KEY,
NOMBRE VARCHAR(150) NOT NULL,
APELLIDO VARCHAR(150) NOT NULL, 
DNI LONG NOT NULL, 
EDAD INT NOT NULL
);

DROP TABLE PRODUCTO IF EXISTS;
CREATE TABLE PRODUCTO(
ID_PRODUCTO LONG AUTO_INCREMENT PRIMARY KEY,
NOMBRE VARCHAR(150) NOT NULL,
DESCRIPCION VARCHAR(150) NOT NULL,
STOCk LONG NOT NULL, 
PRECIO DOUBLE NOT NULL);

DROP TABLE PEDIDO IF EXISTS;
CREATE TABLE PEDIDO (
ID_PEDIDO LONG AUTO_INCREMENT PRIMARY KEY,
FECHA LONG NOT NULL,
TOTAL DOUBLE NOT NULL);


DROP TABLE PRODUCTOPEDIDO IF EXISTS;
CREATE TABLE PRODUCTOPEDIDO (
PRODUCTOPEDIDOID LONG AUTO_INCREMENT PRIMARY KEY,
PEDIDOID INT NOT NULL,
PRODUCTOID INT NOT NULL,
CANTIDAD INT NOT NULL);






